
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Icon Cards-->
<div ng-app="indexApp">
    <div class="row">
        <div class="col-xl-3 col-sm-6 mb-3">
            <div class="card text-white bg-warning o-hidden h-100">
                <div  ng-controller="contagemNovas" class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-fw fa-list"></i>
                    </div>
                    <div class="mr-5">{{ contagem }} nova(s) consultas</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="#">
                    <span class="float-left">Veja mais</span>
                    <span class="float-right">
                        <i class="fas fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>
    </div>



    <div class="card">
        <div class="card-header">
            Agendamentos do Dia
        </div>
        <div class="card-body">

            <div class="table-responsive">
                <table ng-controller="myCtrl" class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Paciente</th>
                            <th>Data/Hora Inicial</th>
                            <th>Data/Hora FInal</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Paciente</th>
                            <th>Data/Hora Inicial</th>
                            <th>Data/Hora FInal</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <tr ng-repeat="consulta in consultas">
                            <td>{{consulta.Paciente[0].Nome}}</td>
                            <td>{{consulta.DataHoraInicialConsulta}}</td>
                            <td>{{consulta.DataHoraFinalConsulta}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript" src="~/js/index.js"></script>
}