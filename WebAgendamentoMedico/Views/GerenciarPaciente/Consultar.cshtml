
@{
    ViewData["Title"] = "Consultar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Consultar Pacientes
    </div>
    <div class="card-body">

        <div ng-app="pacienteApp">

            <div id="tblPacientes" class="table-responsive">
                <table ng-controller="myCtrl" class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Identificação</th>
                            <th>Paciete</th>
                            <th>Nascimento</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Identificação</th>
                            <th>Paciete</th>
                            <th>Nascimento</th>
                        </tr>
                    </tfoot>
                    <tbody>

                        <tr ng-repeat="paciente in pacientes">
                            <td>{{paciente.Id}}</td>
                            <td>{{paciente.Nome}}</td>
                            <td>{{paciente.Nascimento}}</td>

                        </tr>

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script type="text/javascript" src="~/js/paciente.js"></script>
}